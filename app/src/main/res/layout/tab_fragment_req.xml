<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/req_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Request"
                android:textColor="@color/holo_blue_dark"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/txt_req_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textColor="@color/holo_green_light"
                />

            <TextView
                android:id="@+id/txt_req_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/holo_orange_light"
                />

            <TextView
                android:id="@+id/txt_req_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />

            <!--<TextView-->
            <!--android:id="@+id/txt_respo_body"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textColor="@color/black"-->
            <!--/>-->

            <!--<WebView-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="fill_parent"-->
            <!--android:id="@+id/webview_resp"-->
            <!--/>-->

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/respo_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Response"
                android:textColor="@color/holo_blue_dark"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/txt_respo_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textColor="@color/holo_green_light"
                />

            <TextView
                android:id="@+id/txt_respo_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/holo_orange_light"
                />

            <TextView
                android:visibility="gone"
                android:id="@+id/txt_respo_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />

            <!--<TextView-->
                <!--android:id="@+id/txt_respo_body"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textColor="@color/black"-->
                <!--/>-->

            <!--<WebView-->
                <!--android:layout_width="fill_parent"-->
                <!--android:layout_height="fill_parent"-->
                <!--android:id="@+id/webview_resp"-->
                <!--/>-->

        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>